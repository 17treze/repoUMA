	<modelVersion>4.0.0</modelVersion>

	<groupId>it.tndigitale</groupId>
	<artifactId>a4gproxy-integration-liquibase</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>a4g-liquibase</name>
	
	<description>
		POM di utilitï¿½ per mantenere aggiornati gli schemi di integration
	</description>
	
	<properties>
		<show-confirm-schema>true</show-confirm-schema>
		<oracle.version>12.1.0</oracle.version>
		<liquibase-maven-plugin.version>3.6.2</liquibase-maven-plugin.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc7</artifactId>
			<version>${oracle.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<!-- 
			Profili di Liquibase
			mvn -f pom-liquibase.xml -P update-db-sian-svil
			mvn -f pom-liquibase.xml -P update-db-sian-test
			mvn -f pom-liquibase.xml -P update-db-sian-quality
			mvn -f pom-liquibase.xml -P update-db-sian-produzione
		-->
		<profile>
			<id>update-db-sian-svil</id>
			<properties>
				<project.packaging>jar</project.packaging>
			</properties>
			<build>
				<defaultGoal>process-resources</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.liquibase</groupId>
						<artifactId>liquibase-maven-plugin</artifactId>
						<version>${liquibase-maven-plugin.version}</version>
						<executions>
							<execution>
								<id>superuser</id>
								<configuration>
									<propertyFileWillOverride>true</propertyFileWillOverride>
									<promptOnNonLocalDatabase>${show-confirm-schema}</promptOnNonLocalDatabase>
									<propertyFile>config/database/liquibase-svil.properties</propertyFile>
									<expressionVariables>
										<user.writer>UAGSWRT02</user.writer>
									</expressionVariables>
									<labels>SVIL</labels>
								</configuration>
								<phase>process-resources</phase>
								<goals>
									<goal>update</goal>
								</goals>
							</execution>
							<execution>
								<id>wrt</id>
								<configuration>
									<changelogCatalogName>SUAGS05</changelogCatalogName>
									<promptOnNonLocalDatabase>${show-confirm-schema}</promptOnNonLocalDatabase>
									<propertyFileWillOverride>true</propertyFileWillOverride>
									<propertyFile>config/database/liquibase-svil_wrt.properties</propertyFile>
									<expressionVariables>
										<user.superuser>SUAGS05</user.superuser>
										<user.superuser.ricezione>SUAGS04</user.superuser.ricezione>
									</expressionVariables>
									<labels>SVIL</labels>
								</configuration>
								<phase>process-resources</phase>
								<goals>
									<goal>update</goal>
								</goals>
							</execution>
							<execution>
								<id>superuser-ricezione</id>
								<configuration>
									<propertyFileWillOverride>true</propertyFileWillOverride>
									<promptOnNonLocalDatabase>${show-confirm-schema}</promptOnNonLocalDatabase>
									<propertyFile>config/database/liquibase-ricezione-svil.properties</propertyFile>
									<expressionVariables>
										<user.writer>UAGSWRT02</user.writer>
									</expressionVariables>
									<labels>SVIL</labels>
								</configuration>
								<phase>process-resources</phase>
								<goals>
									<goal>update</goal>
								</goals>
							</execution>
							<execution>
								<id>wrt-ricezione</id>
								<configuration>
									<changelogCatalogName>SUAGS04</changelogCatalogName>
									<promptOnNonLocalDatabase>${show-confirm-schema}</promptOnNonLocalDatabase>
